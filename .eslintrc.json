{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
        },
    "extends": "eslint:recommended",
    "overrides": [
        {
            "files": ["*.test.js"],
            "env": { "jest": true },
            "plugins": ["jest"],
            "extends": ["plugin:jest/recommended"],
            "rules": { "jest/prefer-expect-assertions": "off" }
        },
        {
            "files": ["*.cy.js"],
            "env": { "cypress/globals": true },
            "plugins": ["cypress"],
            "extends": ["plugin:cypress/recommended"],
            "rules": { "cypress/no-unnecessary-waiting": "off" }
        },
        {
            "files": ["./cypress/support/commands.js"],
            "rules": {
                "no-undef": "off"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": "off"
    }
}
